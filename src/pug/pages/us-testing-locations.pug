append css
    link(href='css/styles.min.css', rel='stylesheet')
    link(href='https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css', rel='stylesheet', crossorigin='anonymous')
block content
    .page-header.pb-10.bg-white.shadow-sm
        .container-fluid
            .page-header-content
                h5.page-header-subtitle.text-dark.text-md-center.d-block.mb-4s.mx-3.mb-2
                    | This is crowdsourced, regularly-updated listing of COVID-19 testing locations in the USA powered by&nbsp;
                    a.text-orange(href="https://github.com/postmanlabs/covid-19-apis/tree/develop/src/components/TestingSites", target="_blank") Postman team
                        i.icon-new-tab.ml-1
                p.text-md-center.mx-3
                    | You can read the fine print 
                    a.text-orange(href="#", data-toggle='modal', data-target='#finePrint') here
                .row.justify-content-center
                    .col-lg-6.col-md-8.col-sm-12.mx-3
                        .select.w-100.shadow-sm
                            select#selectState 
                                option(selected="true" disabled="disabled") Select a state 
                                each state in stateNameCode
                                    option(value=state.value) #{state.name}
    .container-fluid.mt-n10
        h1.page-header-title.text-dark.text-center.d-block.mb-4.text-body#showingResults
        .row.justify-content-center
            .col-lg-10.col-sm-12#testing-locations

    #finePrint.modal.fade(tabindex='-1', role='dialog', aria-labelledby='finePrintLabel', aria-hidden='true')
        .modal-dialog(role='document')
            .modal-content
                .modal-header
                    h5#finePrintLabel.modal-title Legal
                    button.close(type='button', data-dismiss='modal', aria-label='Close')
                        span(aria-hidden='true') Ã—
                .modal-body The information provided using this website is only intended to be general information for the public and is not intended to take the place of written law or regulations. Please use it at your own discretion. Not everyone needs to be tested for COVID-19. This site provides some information that might help in making decisions about seeking care or testing.
                .modal-footer
                    button.btn.btn-primary(type='button', data-dismiss='modal') Close
                
append scripts
    script(src='js/utilities.js')
    script(src='js/us-testing-locations.js')
    script(src='js/scripts.js')