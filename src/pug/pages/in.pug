        function countryData(data) {
            let filteredArr = data.statewise.filter(function(states){
                return states.statecode !== 'TT'
            })
            var mymap = L.map('covidCountryMap').setView([ 20.59, 78.96 ], 4);
            let mapboxAccessToken =
