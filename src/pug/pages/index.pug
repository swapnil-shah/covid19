extends ../layouts/dashboard.pug

block config
    - var bodyClass = 'nav-fixed'
    - var pageTitle = 'Dashboard'
    - var pageIcon = 'activity'
    - var pageSummary = 'Example dashboard overview and content summary'
    - var sidenavStyle = 'sidenav-light'
    - var topnavStyle = 'navbar-light bg-white'
    - var pageHeaderStyle = 'page-header-dark'
    - var pageHeaderBackground = 'bg-gradient-primary-to-secondary'
    - var footerStyle = 'footer-light'

append css
    link(href='https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css', rel='stylesheet', crossorigin='anonymous')

block content
    .page-header.pb-10(class=pageHeaderStyle, class=pageHeaderBackground)
        .container-fluid
            .row
                .col-xl-6.col-md-12
                    .page-header-content
                        h1.page-header-title
                            .page-header-icon
                                i(data-feather=pageIcon)
                            span 
                                | Dashboard
                        .page-header-subtitle
                            | Example dashboard overview and content summary
                .col-xl-6.col-md-12.d-flex.justify-content-lg-end.justify-content-md-center.pt-5
                    .card.mb-4.w-75
                        .card-header
                            | Statistics
                        .list-group.list-group-flush.small
                            .list-group-item.list-group-item-action.d-flex.justify-content-between.align-items-center
                                .font-weight-bold.pr-3
                                    | Total Cases
                                .text-primary.font-weight-bold 
                                    | 124782
                            .list-group-item.list-group-item-action.d-flex.justify-content-between.align-items-center
                                .font-weight-bold.pr-3
                                    | Total Cases Todat
                                .text-primary.font-weight-bold
                                    | 124782
                            .list-group-item.list-group-item-action.d-flex.justify-content-between.align-items-center
                                .font-weight-bold.pr-3
                                    | Total Deaths
                                .text-primary.font-weight-bold 
                                    | 124782
                            .list-group-item.list-group-item-action.d-flex.justify-content-between.align-items-center
                                .font-weight-bold.pr-3
                                    | Total Recovered
                                .text-primary.font-weight-bold 
                                    | 124782
                            .list-group-item.list-group-item-action.d-flex.justify-content-between.align-items-center
                                .font-weight-bold.pr-3
                                    | Total Active
                                .text-primary.font-weight-bold 
                                    | 124782
                        .card-footer
                            a(href='#!').text-xs.d-flex.align-items-center.justify-content-between
                                | View More Reports
                                i.fas.fa-long-arrow-alt-right

    .container-fluid.mt-n10
        //- Example Overview Card
        //- Pill navigation card with charts and dataTables included within tab panes
        .card.mb-4
            .card-header
                ul.nav.nav-pills.card-header-pills#cardPill(role='tablist')
                    li.nav-item
                        a.nav-link.active#overview-pill(href='#overviewPill', data-toggle='tab', role='tab', aria-controls='overview', aria-selected='true') Overview
                    li.nav-item
                        a.nav-link#activities-pill(href='#activitiesPill', data-toggle='tab', role='tab', aria-controls='activities', aria-selected='false') Activities
            .card-body
                .tab-content#cardPillContent
                    .tab-pane.fade.show.active#overviewPill(role='tabpanel', aria-labelledby='overview-pill')
                        .row
                            .col-lg-8
                                #covidWorldChart(width='100%', height='100%')
                            .col-lg-4
                                h6 Projects
                                hr.mt-1
                                .d-flex.align-items-cetner.justify-content-between.small.mb-1
                                    .font-weight-bold Server Setup
                                    .small 25%
                                .progress.mb-3
                                    .progress-bar.bg-danger(role='progressbar', style='width: 25%', aria-valuenow='25', aria-valuemin='0', aria-valuemax='100')

                                .d-flex.align-items-cetner.justify-content-between.small.mb-1
                                    .font-weight-bold Database Migration
                                    .small 50%
                                .progress.mb-3
                                    .progress-bar.bg-warning(role='progressbar', style='width: 50%', aria-valuenow='50', aria-valuemin='0', aria-valuemax='100')

                                .d-flex.align-items-cetner.justify-content-between.small.mb-1
                                    .font-weight-bold Version Release
                                    .small 75%
                                .progress.mb-3
                                    .progress-bar.bg-primary(role='progressbar', style='width: 75%', aria-valuenow='75', aria-valuemin='0', aria-valuemax='100')

                                .d-flex.align-items-cetner.justify-content-between.small.mb-1
                                    .font-weight-bold Product Listings
                                    .small 100%
                                .progress.mb-4
                                    .progress-bar.bg-success(role='progressbar', style='width: 100%', aria-valuenow='100', aria-valuemin='0', aria-valuemax='100')
                                .text-right
                                    a.btn.btn-primary.btn-sm(href='javascript:void(0);')
                                        | Visit Task Center
                                        i.ml-1(data-feather='arrow-right')

                    .tab-pane.fade#activitiesPill(role='tabpanel', aria-labelledby='activities-pill')
                        include includes/datatable-activity-example.pug

        .card.mb-4
            .card-header
                ul.nav.nav-pills.card-header-pills.active#cardUsaPill(role='tablist')
                    li.nav-item
                        a.nav-link.active#covidUsa-pill(href='#covidUsaPill', data-toggle='tab', role='tab', aria-controls='covidUsa', aria-selected='true') Overview
                    li.nav-item
                        a.nav-link#usaDataTable-pill(href='#usaDataTable', data-toggle='tab', role='tab', aria-controls='usaDataTable', aria-selected='false') Activities
            .card-body
                .tab-content#cardUsaPillContent
                    .tab-pane.fade.show.active#covidUsaPill(role='tabpanel', aria-labelledby='covidUsa-pill')
                        .row
                            .col-lg-8
                                #covidUsaChart(width='100%', height='100%')
                            .col-lg-4
                                h6 Projects
                                hr.mt-1
                                .d-flex.align-items-cetner.justify-content-between.small.mb-1
                                    .font-weight-bold Server Setup
                                    .small 25%
                                .progress.mb-3
                                    .progress-bar.bg-danger(role='progressbar', style='width: 25%', aria-valuenow='25', aria-valuemin='0', aria-valuemax='100')

                                .d-flex.align-items-cetner.justify-content-between.small.mb-1
                                    .font-weight-bold Database Migration
                                    .small 50%
                                .progress.mb-3
                                    .progress-bar.bg-warning(role='progressbar', style='width: 50%', aria-valuenow='50', aria-valuemin='0', aria-valuemax='100')

                                .d-flex.align-items-cetner.justify-content-between.small.mb-1
                                    .font-weight-bold Version Release
                                    .small 75%
                                .progress.mb-3
                                    .progress-bar.bg-primary(role='progressbar', style='width: 75%', aria-valuenow='75', aria-valuemin='0', aria-valuemax='100')

                                .d-flex.align-items-cetner.justify-content-between.small.mb-1
                                    .font-weight-bold Product Listings
                                    .small 100%
                                .progress.mb-4
                                    .progress-bar.bg-success(role='progressbar', style='width: 100%', aria-valuenow='100', aria-valuemin='0', aria-valuemax='100')
                                .text-right
                                    a.btn.btn-primary.btn-sm(href='javascript:void(0);')
                                        | Visit Task Center
                                        i.ml-1(data-feather='arrow-right')

                    .tab-pane.fade#usaDataTable(role='tabpanel', aria-labelledby='usaDataTable-pill')
                        include includes/datatables/datatable-usa.pug
        //- Example Charts for Dashboard Demo
        .row
            .col-md-6
                .card.mb-4
                    .card-header Area Chart Example
                    .card-body
                        .chart-area
                            canvas#myAreaChart(width='100%', height='30')
            .col-md-6
                .card.mb-4
                    .card-header Bar Chart Example
                    .card-body
                        .chart-bar
                            canvas#myBarChart(width='100%', height='30')


        //- Example DataTable for Dashboard Demo
        .card.mb-4
            .card-header
                | DataTable Example
            .card-body
                include includes/datatable-example.pug

append scripts
    script(src='js/chart.js', type="text/javascript")
    //- Load Chart.js via CDN
    //- script(src='https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js', crossorigin='anonymous')
    //- Load custom Chart.js styling and demo data
    //- script(src='assets/demo/chart-area-demo.js')
    //- script(src='assets/demo/chart-bar-demo.js')
    //- Load dataTables via CDN
    script(src='https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js', crossorigin='anonymous')
    script(src='https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js', crossorigin='anonymous')
    //- Load dataTables demo data
    script(src='assets/demo/datatables-demo.js')